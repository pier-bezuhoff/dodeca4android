<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
    >
        <CheckBox
                android:id="@+id/all_circles_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="Select all"
        />
        <ToggleButton
                android:id="@+id/sort_by_color"
                android:background="@null"
                android:button="@drawable/sort_order"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:checked="true"
                android:padding="8dp"
                android:textOn=""
                android:textOff=""
                android:contentDescription="Sort by color"
        />
        <ToggleButton
                android:id="@+id/sort_by_name"
                android:background="@null"
                android:button="@drawable/sort_order"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textOn=""
                android:textOff=""
                android:contentDescription="Sort by name"
        />
    </LinearLayout>
    <View style="@style/dividerHorizontal"/>
    <!-- TODO: remove magic height -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/circle_rows"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="8dp"
    />
    <View style="@style/dividerHorizontal"/>

</LinearLayout>