<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="model" type="com.pierbezuhoff.dodeca.models.MainViewModel"/>
        <variable name="dodecaViewModel" type="com.pierbezuhoff.dodeca.models.DodecaViewModel"/>
        <import type="com.pierbezuhoff.dodeca.data.Shape"/>
    </data>
    <LinearLayout
            android:id="@+id/toolbar1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <ImageButton
                android:id="@+id/choose_color_button"
                android:src="@drawable/ic_choose_color"
                app:backgroundTint="@color/toolbarColor"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:description="@{@string/choose_color_button_title}"
        />
        <ImageButton
                android:id="@+id/trace_button"
                android:src="@drawable/ic_trace"
                app:backgroundTint="@color/toolbarColor"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:description="@{@string/trace_button_title}"
                app:tintEnabled="@{safeUnbox(dodecaViewModel.drawTrace)}"
        />
        <Spinner
                android:id="@+id/shape_spinner"
                android:prompt="@string/shape_spinner_prompt"
                android:spinnerMode="dialog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:selectedItemPosition="@={Shape.toOrdinal(dodecaViewModel.shape)}"
                android:onItemSelected="@{(parent, view, position, id) -> model.showBottomBar()}"
                app:description="@{@string/shape_spinner_title}"
        />
        <ImageButton
                android:id="@+id/clear_button"
                android:src="@drawable/ic_clear"
                app:backgroundTint="@color/toolbarColor"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:description="@{@string/clear_button_title}"
        />
        <ImageButton
                android:id="@+id/autocenter_button"
                android:src="@drawable/ic_autocenter"
                app:backgroundTint="@color/toolbarColor"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:description="@{@string/autocenter_button_title}"
        />
    </LinearLayout>
</layout>